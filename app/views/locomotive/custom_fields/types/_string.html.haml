= f.input name,
  label:        label_for_custom_field(f.object, field),
  hint:         field.hint,
  wrapper_html: { class: "#{'highlighted' if highlighted} #{'image-repository' if field.image_repository?}" }
- if field.image_repository?
  - ckeditor_id = "#{name.to_s}_ckeditor"
  %div{style: "display:none;"}
    = text_area_tag ckeditor_id, f.object.send(name), id: ckeditor_id, disabled: true